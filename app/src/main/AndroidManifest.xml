<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notestakingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotesTakingApp.noActionBar">
        <activity android:name=".Splash" android:theme="@style/Theme.NotesTakingApp.noActionBar.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.Registration" />
        <activity android:name=".auth.Login" />
        <activity
            android:name=".note.EditNote"
            android:label="@string/title_activity_edit_note"
            android:theme="@style/Theme.NotesTakingApp.noActionBar.NoActionBar" />
        <activity
            android:name=".note.AddNote"
            android:label="@string/title_activity_add_note"
            android:theme="@style/Theme.NotesTakingApp.noActionBar.NoActionBar" />
        <activity
            android:name=".note.NoteDetails"
            android:label="@string/title_activity_note_details"
            android:theme="@style/Theme.NotesTakingApp.noActionBar.NoActionBar" />
        <activity android:name=".MainActivity">
        </activity>
    </application>

</manifest>